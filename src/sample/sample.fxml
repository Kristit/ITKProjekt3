            <Label text="Course name:" />
            <TextField text="" fx:id="courseNameF"/>
            <Label text="Credits:" />
            <TextField text="" fx:id="creditsF"/>
            <Button  fx:id ="removeCourseButton"  >
                <graphic>
                    <ImageView>
