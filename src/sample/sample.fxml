                            <String fx:value="CB 4"/>
                        </FXCollections>
                    </items>

                </ChoiceBox>

                <Button  fx:id ="addTaskButton"  >
                    <graphic>
                        <ImageView>
                            <Image url="@/toolbarButtonGraphics/general/Add16.gif"/>
                        </ImageView>
                    </graphic>
                </Button>

                <Button  fx:id ="removeTaskButton"  >
                    <graphic>
                        <ImageView>
                            <Image url="@/toolbarButtonGraphics/general/Remove16.gif"/>
                        </ImageView>
                    </graphic>
                </Button>

